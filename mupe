if(keys %bframes) {
    print "<h2>Beacon frame graphs</h2>\n";

    foreach my $freq (keys %bframes) {
	foreach my $bssid (keys %{$bframes{$freq}}) {
	    print "<h3>$bssid</h3>\n";
	    print "<ul>\n";

	    my $links = $bframes{$freq}->{$bssid};
	    foreach my $k (sort {$links->{$a} cmp $links->{$b}} keys %{$links}) {
		my $png = sprintf($tfn, $k, 'png');
		my $txt = sprintf($tfn, $k, 'txt');
		my $content = '';
		if (open(HPRE, $txt)) {
		    $content = join('', <HPRE>);
		    close(HPRE);
		}
                print $context->include('link', {
		    content => $content,
		    id => $txt,
		    png => $png,
		    title => $links->{$k},
                });
	    }
	    print "</ul>\n";
	}
    }
}

if(keys %dframes) {
    print "<h2>Data frame graphs</h2>\n";
    foreach my $src (sort keys %dframes) {
	print "<h3>$src</h3>\n";
	print "<ul>\n";
	foreach my $k (sort {$links{$a} cmp $links{$b}} keys %links) {
	    my $png = sprintf($tfn, $k, 'png');
	    my $txt = sprintf($tfn, $k, 'txt');

	    my $content = '';
	    if (open(HPRE, $txt)) {
		$content = join('', <HPRE>);
		close(HPRE);
	    }
	    print $context->include('link', {
		content => $content,
		id => $txt,
		png => $png,
		title => $links->{$k},
            });
        }
	print "</ul>\n";
    }
}

